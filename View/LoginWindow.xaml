<Window x:Class="Kursach.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизація" Height="300" Width="400"
        Background="{StaticResource BackgroundGradient}">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизація" Style="{StaticResource HeaderTextStyle}"/>

            <!-- Привязка к свойству UserLogin -->
            <TextBox x:Name="LoginTextBox" 
                     Width="250" Height="40" Margin="0,10" 
                     FontFamily="Segoe UI" Background="White" Foreground="Black"
                     Text="{Binding UserLogin, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Привязка к свойству Password -->
            <PasswordBox x:Name="PasswordBox" 
                         Width="250" Height="40" Margin="0,10" 
                         FontFamily="Segoe UI" Background="White" Foreground="Black"
                         PasswordChanged="PasswordBox_PasswordChanged" />

            <!-- Кнопка для выполнения команды логина -->
            <Button Content="Увійти" 
                    Command="{Binding LoginCommand}" 
                    Width="100" Height="30" Margin="0,20" />
        </StackPanel>
    </Grid>
</Window>
