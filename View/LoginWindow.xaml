<Window x:Class="Kursach.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизація" Height="300" Width="400"
        Background="{StaticResource BackgroundGradient}">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизація" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,20" FontFamily="Arial Black"/>

            <Grid>
                <TextBox x:Name="LoginTextBox"
                         Width="250" Height="40" Margin="0,10"
                         FontFamily="Segoe UI" Background="White" Foreground="Black"
                         VerticalContentAlignment="Center" 
                         Text="{Binding UserLogin, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Введіть логін" Foreground="Gray" VerticalAlignment="Center"
                           HorizontalAlignment="Left" Margin="10,0" IsHitTestVisible="False" />
            </Grid>

            <!-- Пароль -->
            <Grid>
                <PasswordBox x:Name="PasswordBox" 
                             Width="250" Height="40" Margin="0,10" 
                             FontFamily="Segoe UI" Background="White" Foreground="Black"
                             VerticalContentAlignment="Center"
                             PasswordChanged="PasswordBox_PasswordChanged"/>
                <TextBlock Text="Введіть пароль" Foreground="Gray" VerticalAlignment="Center"
                           HorizontalAlignment="Left" Margin="10,0" IsHitTestVisible="False" />
            </Grid>

            <!-- Кнопка входа -->
            <Button Content="Увійти" 
                    Command="{Binding LoginCommand}" 
                    Width="116" Height="30" Margin="0,20" FontFamily="Arial Black" />
        </StackPanel>
    </Grid>
</Window>