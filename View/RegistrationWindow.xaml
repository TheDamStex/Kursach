<Window x:Class="Kursach.View.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Kursach.ViewModel"
        mc:Ignorable="d"
        Title="Реєстрація" Height="400" Width="500"
        Background="{StaticResource BackgroundGradient}">

    <Window.DataContext>
        <vm:RegistrationViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Заголовок -->
            <TextBlock Text="Реєстрація" Style="{StaticResource HeaderTextStyle}" />

            <!-- Поле логина -->
            <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" 
                     Width="250" Height="40" Margin="0,10" FontFamily="Segoe UI"
                     Background="White" Foreground="Gray" />

            <!-- Поле ввода пароля -->
            <PasswordBox x:Name="PasswordBox1" Width="250" Height="40" Margin="0,10" FontFamily="Segoe UI"
                         Background="White" PasswordChanged="PasswordBox1_PasswordChanged" />

            <!-- Поле подтверждения пароля -->
            <PasswordBox x:Name="PasswordBox2" Width="250" Height="40" Margin="0,10" FontFamily="Segoe UI"
                         Background="White" PasswordChanged="PasswordBox2_PasswordChanged" />

            <!-- Кнопка регистрации -->
            <Button Content="Зареєструватися" Command="{Binding RegisterCommand}" 
        IsEnabled="{Binding CanRegister}" Width="250" Height="40" Margin="0,10" />

        </StackPanel>
    </Grid>
</Window>
