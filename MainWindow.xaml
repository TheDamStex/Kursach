<Window x:Class="Kursach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Каса автовокзалу" Height="450" Width="700"
        Background="{StaticResource BackgroundGradient}">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Ласкаво просимо до каси автовокзалу" Style="{StaticResource HeaderTextStyle}"/>
            <Button Content="Розклад автобусів" Click="OpenScheduleWindow"/>
            <Button Content="Оформлення квитків" Click="OpenTicketWindow"/>
            <Button Content="Авторизація" Click="OpenLoginWindow"/>
            <Button Content="Реєстрація" Click="OpenRegistrationWindow"/>
        </StackPanel>
    </Grid>
</Window>
