<Window x:Class="Kursach.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизація" Height="300" Width="400"
        Background="{StaticResource BackgroundGradient}">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизація" Style="{StaticResource HeaderTextStyle}"/>
            <TextBox x:Name="LoginTextBox" Width="250" Height="40" Margin="0,10" FontFamily="Segoe UI" Background="White" Foreground="Black" 
                     GotFocus="LoginTextBox_GotFocus" LostFocus="LoginTextBox_LostFocus" Text="Логін"/>
            <PasswordBox x:Name="PasswordBox" Width="250" Height="40" Margin="0,10" FontFamily="Segoe UI" Background="White" Foreground="Black"/>
            <Button Content="Увійти" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
