<Window x:Class="Kursach.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація" Height="400" Width="500"
        Background="{StaticResource BackgroundGradient}">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Реєстрація" Style="{StaticResource HeaderTextStyle}"/>

            <TextBox x:Name="LoginTextBox" Width="250" Height="40" Margin="0,10" FontFamily="Segoe UI" Background="White" Foreground="Black"
                     GotFocus="LoginTextBox_GotFocus" LostFocus="LoginTextBox_LostFocus"/>
            
            <PasswordBox x:Name="PasswordBox1" Width="250" Height="40" Margin="0,10" FontFamily="Segoe UI" Background="White" Foreground="Black"/>
            <PasswordBox x:Name="PasswordBox2" Width="250" Height="40" Margin="0,10" FontFamily="Segoe UI" Background="White" Foreground="Black"/>

            <Button Content="Зареєструватися" Click="RegisterButton_Click"/>
           
        </StackPanel>
    </Grid>
</Window>
